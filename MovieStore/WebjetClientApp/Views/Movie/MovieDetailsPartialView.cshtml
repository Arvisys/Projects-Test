@model List<WebjetClientApp.Models.Movie>

@if (Model != null)
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6">
                <hr />
                <img src="@Url.Content(item.Poster)" alt="@item.Title" height="180" width="171" title="@item.Title" />
                <div class="caption">
                    <h2> @item.Title</h2>
                    <h3><span>Price ($): @item.Price <a href="#" class="btn btn-success" role="button">Buy Movie</a></span></h3>
                    <p>@item.Plot</p>
                    <p>Rated : @item.Rated </p>
                    <p>Released : @item.Released</p>
                    <p>Rating : @item.Rating</p>
                    <p>Actors : @item.Actors</p>
                    <p>Director : @item.Director</p>
                    <p>Genre : @item.Genre</p>
                    <p>Runtime : @item.Runtime</p>
                    <p>Provider : @item.Provider</p>
                </div>
            </div>
        }
    </div>
}