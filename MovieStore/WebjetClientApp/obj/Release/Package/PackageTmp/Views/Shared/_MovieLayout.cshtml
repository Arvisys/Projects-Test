<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css") <!--including Bootstrap css -->
    @Scripts.Render("~/bundles/modernizr")  <!--including modenizr JS -->
</head>
<body>
    <div class="navbar navbar-inverse">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/movie/index">Movie Store</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li><a href="~/Movie/Cinema"> <span class="glyphicon glyphicon-facetime-video"></span> Cinema World</a></li>
                    <li><a href="~/Movie/Film"> <span class="glyphicon glyphicon-film"></span>  Film World</a></li>
                    <li><a href="~/Movie/price"> <span class="glyphicon glyphicon-usd"></span>  Cheapest Price</a></li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="javascript:window.open('','_self').close();window.top.close();"><span>Close</span></a></li>
                </ul>
            </div>

        </div>


    </div>
    @Scripts.Render("~/bundles/jquery") <!--including jquery JS -->
    @Scripts.Render("~/bundles/bootstrap") <!--including Bootstrap JS -->
    @RenderSection("scripts", required: false) <!--including view JS/Script -->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer >
            <p>&copy; @DateTime.Now.Year - Movie Store Website.</p>
        </footer>
    </div>
</body>
</html>
